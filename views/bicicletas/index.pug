extends ../layout

block content

 div.container
    br
    a(href='/' class="btn btn-dark" style="padding: 1%") Home
    br
   

    table.table
        thead
            tr
              th(scope='col') #
              th(scope='col') color
              th(scope='col') modelo
              th(scope='col') ubicaci√≥n
              th(scope='col') 
              th(scope='col') 
              th(scope='col') 
        tbody
          each bici in bicis
            tr
              td(scope='row')
                = bici.id
              td= bici.color
              td= bici.modelo
              td= bici.ubicacion
              td
                a(href='/bicicletas/' + bici.id + '/update' style="padding: 9%" class='btn btn-dark') Editar
              td
                form.inline(method='post' action=`/bicicletas/${bici.id}/delete`)
                  input(type='hidden' name='id' value= bici.id)
                  button.link-button(type='submit' name='submit_param' style="padding: 6%" value='submit_value' class='btn btn-danger')
                    = 'Eliminar'
              td
                 a(href='/bicicletas/' + bici.id + '/showDetails' style="padding: 5%" class='btn btn-info') Ver detalles

            br
    br
    a(href='/bicicletas/create' class="btn btn-success" style="padding: 1%") Nueva bicicleta